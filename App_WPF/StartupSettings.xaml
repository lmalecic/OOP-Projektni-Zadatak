<Window x:Class="App_WPF.StartupSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_WPF"
        mc:Ignorable="d"
        Title="Startup Settings" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <GroupBox Header="Tournament">
                <ComboBox x:Name="TournamentComboBox">

                </ComboBox>
            </GroupBox>
        </StackPanel>
        
        <Grid Grid.Row="1" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="CancelBtn" Grid.Column="0" Margin="4" Content="Cancel" />
            <Button x:Name="ConfirmBtn" Grid.Column="1" Margin="4" Content="Confirm" />
        </Grid>
    </Grid>
</Window>
