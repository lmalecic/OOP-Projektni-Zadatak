<Window x:Class="App_WPF.TeamResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_WPF"
        mc:Ignorable="d"
        Title="Team Stats" Height="300" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="{Binding TeamResults}" FontWeight="Bold" FontSize="16"/>
        <StackPanel Grid.Row="1">
            <Label Content="{Binding TeamResults.FifaCode}" ContentStringFormat="FIFA Code: {0}"/>
            <Label Content="{Binding TeamResults.GamesPlayed}" ContentStringFormat="Matches played: {0}"/>
            <Label Content="{Binding TeamResults.Wins}" ContentStringFormat="Wins: {0}"/>
            <Label Content="{Binding TeamResults.Losses}" ContentStringFormat="Losses: {0}"/>
            <Label Content="{Binding TeamResults.Draws}" ContentStringFormat="Draws: {0}"/>
            <Label Content="{Binding TeamResults.GoalsFor}" ContentStringFormat="Goals scored: {0}"/>
            <Label Content="{Binding TeamResults.GoalsAgainst}" ContentStringFormat="Goals conceded: {0}"/>
            <Label Content="{Binding TeamResults.GoalDifferential}" ContentStringFormat="Goal differential: {0}"/>
        </StackPanel>
    </Grid>
</Window>
