<Window x:Class="App_WPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_WPF"
        xmlns:converters="clr-namespace:App_WPF.Converters"
        mc:Ignorable="d"
        Title="Startup Settings" Height="190" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <Window.Resources>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <Style TargetType="RadioButton" x:Key="RadioButtonStyle">
            <Setter Property="Margin" Value="6 3"/>
        </Style>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <GroupBox Header="Tournament">
                <ComboBox ItemsSource="{Binding TournamentChoices}"
                          SelectedItem="{Binding SelectedTournament, Mode=TwoWay}"
                          DisplayMemberPath="DisplayText"/>
            </GroupBox>
            <GroupBox Header="Language">
                <ComboBox ItemsSource="{Binding CultureChoices}"
                          SelectedItem="{Binding SelectedCulture, Mode=TwoWay}"
                          DisplayMemberPath="NativeName"/>
            </GroupBox>
            <GroupBox Header="Application size">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton Style="{StaticResource RadioButtonStyle}" Content="Fullscreen" GroupName="Size"
                                 IsChecked="{Binding SelectedSize, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Fullscreen}"/>
                    <RadioButton Style="{StaticResource RadioButtonStyle}" Content="800x600" GroupName="Size"
                                 IsChecked="{Binding SelectedSize, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Windowed800x600}"/>
                    <RadioButton Style="{StaticResource RadioButtonStyle}" Content="1024x768" GroupName="Size"
                                 IsChecked="{Binding SelectedSize, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Windowed1024x768}"/>
                    <RadioButton Style="{StaticResource RadioButtonStyle}" Content="1280x720" GroupName="Size"
                                 IsChecked="{Binding SelectedSize, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Windowed1280x720}"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="CancelBtn" Style="{StaticResource ButtonStyle}" Grid.Column="0" Content="Cancel" Click="CancelBtn_Click" />
            <Button x:Name="ConfirmBtn" Style="{StaticResource ButtonStyle}" Grid.Column="1" Content="Confirm" Click="ConfirmBtn_Click" />
        </Grid>
    </Grid>
</Window>
