<UserControl x:Class="App_WPF.PlayerContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="100">
    <Grid ClipToBounds="False">
        <Image x:Name="playerImage" Source="{Binding PlayerImageSource}" Margin="10,10,10,0" Grid.RowSpan="2"/>
        <TextBlock Text="{Binding Player}" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>
        <Label Content="{Binding Player.ShirtNumber}" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black" FontSize="20" Foreground="White">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="2" Opacity="0.5"/>
            </Label.Effect>
        </Label>
    </Grid>
</UserControl>
