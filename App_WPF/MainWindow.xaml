<Window x:Class="App_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_WPF"
        mc:Ignorable="d"
        Title="World Cup Tournaments" Height="582" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Grid" x:Key="PlayersPanel">
            <Setter Property="Margin" Value="7"/>
            <Style.Resources>
                <Style TargetType="UniformGrid">
                    <Setter Property="Margin" Value="14"/>
                    <Setter Property="Rows" Value="1"/>
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="Image" x:Key="FootballFieldImageStyle">
            <Setter Property="Stretch" Value="UniformToFill"/>
        </Style>
        <Style TargetType="Button" x:Key="TeamInfoButton">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Content" Value="Stats"/>
            <Setter Property="Margin" Value="5 0 0 0"/>
            <Setter Property="Padding" Value="15 0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Menu Padding="2" Grid.Row="0" Grid.ColumnSpan="6">
            <MenuItem Header="Startup Settings" Click="MenuItem_Click"/>
        </Menu>

        <GroupBox Margin="0 0 5 0" Header="Select a Team" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox ItemsSource="{Binding Teams1}"
                          SelectedItem="{Binding Team1, Mode=TwoWay}" VerticalContentAlignment="Center"/>
                <Button x:Name="team1StatsButton" Style="{StaticResource TeamInfoButton}" Grid.Row="1" Grid.Column="3" Click="team1StatsButton_Click" IsEnabled="False"/>
            </Grid>
        </GroupBox>

        <GroupBox Margin="5 0 0 0" Header="Select a Team" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" FlowDirection="RightToLeft" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="teams2ComboBox"
                          ItemsSource="{Binding Teams2}"
                          SelectedItem="{Binding Team2, Mode=TwoWay}" IsEnabled="False" FlowDirection="LeftToRight" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
                <Button x:Name="team2StatsButton" Style="{StaticResource TeamInfoButton}" Grid.Row="1" Grid.Column="3" Click="team2StatsButton_Click" IsEnabled="False"/>
            </Grid>
        </GroupBox>

        <StackPanel x:Name="matchResultPanel" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Result" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16"/>
            <Label x:Name="matchResultLabel" Content="1 : 0" FontWeight="Bold" HorizontalAlignment="Center" FontSize="20"/>
        </StackPanel>

        <Grid Style="{StaticResource PlayersPanel}" Grid.Row="2" Grid.ColumnSpan="2">
            <Image Source="Images/football_field.png" Style="{StaticResource FootballFieldImageStyle}"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <UniformGrid x:Name="Forward1"/>
                <UniformGrid x:Name="Midfield1" Grid.Row="1"/>
                <UniformGrid x:Name="Defenders1" Grid.Row="2"/>
                <UniformGrid x:Name="Goalie1" Grid.Row="3"/>
            </Grid>
        </Grid>

        <Grid Style="{StaticResource PlayersPanel}" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2">
            <Image Source="Images/football_field.png" Style="{StaticResource FootballFieldImageStyle}"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <UniformGrid x:Name="Forward2"/>
                <UniformGrid x:Name="Midfield2" Grid.Row="1"/>
                <UniformGrid x:Name="Defenders2" Grid.Row="2"/>
                <UniformGrid x:Name="Goalie2" Grid.Row="3"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
